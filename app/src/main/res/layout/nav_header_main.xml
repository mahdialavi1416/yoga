<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp">

        <ImageView
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:id="@+id/drawerHeaderImage"
            android:layout_height="match_parent" />

       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:gravity="right|center_vertical"
           android:layout_height="match_parent">

           <com.technologygroup.rayannoor.yoga.RoundedImageView
               android:layout_width="70dp"
               android:layout_height="70dp"
               android:layout_margin="15dp"
               android:src="@mipmap/ic_man"
               android:id="@+id/imgUser"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/txtUserName"
               android:text="کاربر میهمان"
               android:textSize="17sp"
               android:layout_marginRight="15dp"
               android:textColor="@color/white"
               android:textStyle="bold"
               style="@style/AudioFileInfoOverlayText2" />

       </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:id="@+id/lytLogin"
        android:gravity="right|center_vertical"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtLogin"
            android:layout_width="wrap_content"
            android:text="ورود / ثبت نام"
            android:textSize="15sp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="20dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_login"
            android:layout_height="20dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:id="@+id/lytChart"
        android:gravity="right|center_vertical"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="چارت سازمانی یوگا"
            android:textSize="15sp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="20dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_chart"
            android:layout_height="20dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/lytAboutApp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:gravity="right|center_vertical"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="درباره برنامه"
            android:textSize="15sp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="20dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_app"
            android:layout_height="20dp" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="0.5dp"></RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/lytAboutUs"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:gravity="right|center_vertical"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="درباره ما"
            android:textSize="15sp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="20dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_about_us"
            android:layout_height="20dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/lytRate"
        android:background="?attr/selectableItemBackground"
        android:gravity="right|center_vertical"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="امتیازدهی به برنامه"
            android:textSize="15sp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="20dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_rate"
            android:layout_height="20dp" />


    </LinearLayout>


</LinearLayout>