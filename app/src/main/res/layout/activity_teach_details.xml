            <TextView
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="5. سرتان را بالا بیاورید و چانه خود را به پا نزدیک کنید و نفس عمیق بکشید. همراه با بازدم سر خود را پایین بیاورید.به آرامی نفس بکشید."
                android:textColor="@color/black"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:layout_height="wrap_content"
                android:id="@+id/teach_details_text"/>

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/home"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/teach_details_image"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="35dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingBottom="25dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent"></RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="0.4"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        android:id="@+id/lytShare"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="25dp"
                            android:src="@drawable/ic_share"
                            android:scaleType="fitXY"
                            android:layout_height="25dp"
                            android:id="@+id/teach_details_sharing"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="اشتراک گذاری"
                            android:textSize="12sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/lytLast"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="5dp"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="25dp"
                            android:src="@drawable/ic_next"
                            android:layout_height="25dp" />

                        <TextView
