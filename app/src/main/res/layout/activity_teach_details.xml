                            android:textSize="12sp"
                            android:textColor="@color/lightBlack"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent"></RelativeLayout>

            </LinearLayout>

